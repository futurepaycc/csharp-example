{
    // 运行任务的快捷键设计为ctrl+shift+r
    // for the documentation about the tasks.json format
    "tasks": [
        {
            "taskName": "build",
            "command": "mcs",
            "isShellCommand": true,
            "args": [
                "-pkg:dotnet",
                "${file}"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "command": "${cwd}/${fileBasenameNoExtension}.exe",
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "clean",
            "command": "rm",
            "isShellCommand": true,
            "args": [
                "${cwd}/${fileBasenameNoExtension}.exe"
            ],
            "showOutput": "always"
        }
    ]
}